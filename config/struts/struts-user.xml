<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="user" namespace="/" extends="common">
		<action name="userAction_*" class="com.san.action.UserAction" method="{1}">
			<!-- 登录成功 -->
			<result name="success" type="redirect">/index.jsp</result>
			<!-- 登录失败 -->
			<result name="login">/login.jsp</result>
			
			<!-- 找回密码，邮箱正确 -->
			<result name="forgetPassword">/inputValidationCode.jsp</result>
			<!-- 找回密码，邮箱错误 -->
			<result name="errorMail">/forgetPassword.jsp</result>
			<!-- 找回密码，输入的验证码正确 -->
			<result name="verificationCode_success">/resetPassword.jsp</result>
			<!-- 找回密码，输入验证码错误 -->
			<result name="verificationCode_fail">/inputValidationCode.jsp</result>
			<!-- 找回密码，重置密码成功 -->
			<result name="resetPassword_success">/login.jsp</result>
			<!-- 找回密码，重置密码失败 -->
			<result name="resetPassword_fail">/resetPassword.jsp</result>
			
			<!-- 退出系统 -->
			<result name="signOut">/index.jsp</result>
			
			<!-- 用户登录后，修改密码 -->
			<result name="changePassword" type="redirect">/login.jsp</result>
		</action>
	</package>
</struts>