<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="boutique" namespace="/" extends="common">
		<action name="boutiqueAction_*" class="com.san.action.BoutiqueAction" method="{1}">
			<!-- 跳转到具体课程刷题 -->
			<result name="detail">/boutiqueDetail.jsp</result>
			
			<!-- 显示精品区信息 -->
			<result name="display">/boutique.jsp</result>
			
			<!-- 精品区下一题 -->
			<result name="nextBoutSubject" type="redirect">/boutiqueDetail.jsp</result>
			
			<!-- 具体题目,开始刷题 -->
			<result name="detailSubject">/boutiqueDetail.jsp</result>
			
		</action>
	</package>
</struts>